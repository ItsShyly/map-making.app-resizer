{
  "manifest_version": 3,
  "name": "map-making.app Window resizer",
  "version": "1.0",
  "description": "Add a draggable resizer between the map and the tags/preview",
  "permissions": ["scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://map-making.app/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
